mixin contactInput(iType, iPlaceholder, iId, iValidate)
  .form-group
    input(type=iType class="form-control" placeholder=iPlaceholder id=iId required data-validation-required-message=iValidate)
    p(class="help-block text-danger")
    
section#contact
  .container
    .row
      div(class="col-lg-12 text-center")
        h2.section-heading Contact Us
        h3(class="section-subheading text-muted") Lorem ipsum dolor sit amet consectetur.

    .row
      .col-lg-12
        form(name="sentMessage" id="contactForm" novalidate)
          .row
            .col-md-6
              +contactInput("text", "Your Name *", "name", "Please Enter Your Name.")
              +contactInput("email", "Your Email *", "email", "Please Enter Your Email.")
              +contactInput("tel", "Your Phone Number *", "phone", "Please Enter Your Phone Number.")
            .col-md-6
              .form-group
                textarea(class="form-control" placeholder="Your Message *" id="message" required data-validation-required-message="Please enter a message.")
                p(class="help-block text-danger")
            .clearfix
            div(class="col-lg-12 text-center")
              #sucesss
              button(type="submit" class="btn btn-xl") Send Message
