mixin servicesSection(serviceTitile, serviceDesc)
  div(class="col-md-4")
    span(class="fa-stack fa-4x")
      i(class="fa fa-circle fa-stack-2x text-primary")
      i(class="fa fa-shopping-cart fa-stack-1x fa-inverse")
    h4(class="service-heading")= serviceTitile
    p(class="text-muted")= serviceDesc

section(id="services")
  .container
    .row
      div(class="col-lg-12 text-center")
        h2(class="section-heading") Services
        h3(class="section-subheading text-muted") Lorem ipsum dolor sit amet consectetur.
    div(class="row text-center")
      +servicesSection('Apparel Printing', "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta impedit.")
      +servicesSection('Screen Printed Posters', "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta impedit.")
      +servicesSection('Graphic Design', "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta impedit.")
            
